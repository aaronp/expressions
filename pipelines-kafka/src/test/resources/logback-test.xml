<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>KQtest: %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="pipelines" level="debug" />
    <logger name="org.apache.kafka" level="warn" />

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
